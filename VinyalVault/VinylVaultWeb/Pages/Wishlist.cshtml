@page
@model VinylVaultWeb.Pages.WishlistModel
@{
    ViewData["Title"] = "My Wishlist";
}

<h2 class="mb-4">My Wishlist</h2>

@if (!Model.WishlistAlbums.Any())
{
        <div class="alert alert-info">You haven't added any albums to your wishlist yet.</div>
}
else
{
        <div class="wishlist-grid">
        @foreach (var item in Model.WishlistAlbums)
        {
                    <div class="wishlist-card">
                        <img src="@item.Album.CoverUrl" alt="Cover of @item.Album.Name" />
                        <div class="card-body d-flex flex-column">
                            <h5>@item.Album.Name</h5>
                            <p class="text-muted mb-1">@item.Album.Artist</p>
                            <p><strong>Release Date:</strong> @item.Album.ReleaseDate</p>

                    @if (item.IsAvailable)
                    {
                                    <div class="status available">✅ Available</div>
                                    <a href="/BuyVinyl/@item.Album.Id" class="btn btn-outline-success btn-sm mt-2">View Sellers</a>
                    }
                    else
                    {
                                    <div class="status unavailable">❌ Not Available</div>
                    }
                        </div>
                    </div>
        }
        </div>
}
