@page "{albumId?}"
@model VinylVaultWeb.Pages.SellVinylModel
@{
    ViewData["Title"] = "Sell Vinyl";
}

<h2>Sell Vinyl</h2>

@if (Model.SuccessMessage != null)
{
    <div class="alert alert-success">
        @Model.SuccessMessage
    </div>
}

@if (!Model.ModelState.IsValid)
{
    <div class="alert alert-danger">
        Please provide valid information.
    </div>
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="VinylTitle">Vinyl Title</label>
        <input type="text" class="form-control" id="VinylTitle" name="VinylTitle" value="@Model.VinylTitle" readonly />
    </div>

    <div class="form-group">
        <label for="VinylArtist">Artist</label>
        <input type="text" class="form-control" id="VinylArtist" name="VinylArtist" value="@Model.VinylArtist" readonly />
    </div>

    <div class="form-group">
        <label for="Condition">Condition</label>
        <select asp-for="Condition" asp-items="Model.ConditionOptions" class="form-control" required>
            <option value="">-- Select Condition --</option>
        </select>
    </div>


    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description" rows="4" required>@Model.Description</textarea>
    </div>

    <div class="form-group">
        <label for="TrackImage">Track Image</label>
        <input type="file" class="form-control-file" id="TrackImage" name="TrackImage" accept="image/*" required onchange="previewImage(event)" />
    </div>

    <div class="form-group mt-3">
        <img id="preview" src="#" alt="Image preview..." style="max-width: 300px; display: none;" class="img-thumbnail" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Sell</button>
</form>

@section Scripts {
    <script>
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                const output = document.getElementById('preview');
                output.src = reader.result;
                output.style.display = 'block';
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
