<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vinyl Vault</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Index">VinylVault</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Marketplace">Marketplace</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/AboutUs">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/ContactUs">Contact Us</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/OrderHistory">Order History</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Profile">Profile</a>
                        </li>
                        
                        @if (User.IsInRole("Seller")) 
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/ItemsListed">My Listed Items</a>  
                            </li>
                        }

                        <li class="nav-item">
                            <form method="post" asp-page="/LogOut">
                                <button type="submit" class="btn btn-outline-light">Log Out</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="btn btn-primary" asp-page="/LogIn">Log In</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3">
        <p>© 2025 Vinyl Vault. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
