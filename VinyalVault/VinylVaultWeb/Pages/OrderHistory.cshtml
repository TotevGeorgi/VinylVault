@page
@model VinylVaultWeb.Pages.OrderHistoryModel
@{
    ViewData["Title"] = "Order History";
}
<div class="container mt-5">
    <h2 class="text-center mb-4">Your Order History</h2>

    @if (Model.Orders.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Cover</th>
                    <th>Title</th>
                    <th>Artist</th>
                    <th>Price</th>
                    <th>Purchase Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model.Orders)
                {
                    <tr>
                        <td>
                            <img src="@o.CoverUrl" width="50" />
                        </td>
                        <td>@o.Title</td>
                        <td>@o.Artist</td>
                        <td>@o.Price.ToString("C")</td>
                        <td>@o.PurchaseDate.ToString("yyyy-MM-dd HH:mm")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            You haven’t purchased anything yet.
        </div>
    }
</div>
